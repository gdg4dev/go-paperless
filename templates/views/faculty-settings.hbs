<!DOCTYPE html>
<html lang="en">
{{>dashHeader}}

<body>
    {{>facultyDashSideNav}}
    <div class="container-fluid mt--4">
        <div class="row pt-3">

            <div class="col-lg-12">
                <div class="card-arapper">

                    <div class="card"
                        style="display: flex;min-height: 85vh;justify-content: center;text-align: center;align-items: center;">
                        <div class="form-group col-lg-4">
                            <label for="stuName" class="form-control-label"> Name</label>
                            <input class="form-control" value="{{collegeName}}" type="text" placeholder="John Doe"
                                id="stuName" required>
                        </div>
                        <div class="form-group col-lg-4">
                            <label for="stuMail" class="form-control-label"
                                title="Do not use disposable emails"> Email</label>
                            <input class="form-control" disabled='disabled' type="email" value="{{college_email}}"
                                title="Do not use disposable emails" placeholder="abc@example.com" id="stuMail"
                                required>
                        </div>
                        <button id="submit" class="btn btn-primary col-lg-4" type="button">Save Changes</button>
                    </div>
                </div>
            </div>
        </div>
        {{>footer}}
    </div>
    <script src="/src/js/common.js"></script>
    {{>argonJS}}
    <script src="/src/js/api.js"></script>
    <script>
        $("#submit").click(() => {
            alert('Processing Your Request')
            if ($("#stuName").val()) {
                callAPI(JSON.stringify({
                    actionCode: 10302,
                    token: Cookies.get('token'),
                    opt: {
                        facultyDataToUpdate: {
                            name: $("#stuName").val()
                        }
                    }
                }), (res) => {
                    alert(res.response)
                    location.reload()
                })
            }
            else {
                alert("Please Fill All Details")
            }
        })
    </script>
</body>

</html>